generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(cuid())
  sessions Session[]
  username String    @unique
  email    String    @unique
  password String?

  posts Post[]
}

model Session {
  id        String   @id
  userId    String
  expiresAt DateTime
  user      User     @relation(references: [id], fields: [userId], onDelete: Cascade)
}

model Post {
  id String @id @default(cuid())

  title   String
  content String @db.Text

  // BASIC TYPES
  isFavourite Boolean
  likeCount   Int

  writingAt       DateTime
  writingDuration Int

  typeId String
  type   PostType @relation(fields: [typeId], references: [id])

  tags Tag[]

  publication PostPublication

  authorId String
  author   User   @relation(fields: [authorId], references: [id], onDelete: Cascade)
}

enum PostPublication {
  private
  friends
  public
}

model PostType {
  id    String @id @default(cuid())
  name  String @unique
  icon  String @db.Text
  posts Post[]
}

model Tag {
  id    String @id @default(cuid())
  name  String @unique
  posts Post[]
}
